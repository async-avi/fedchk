generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Review{
  id String @id @db.ObjectId @default(auto()) @map("_id")
  username String
  content String
  assetUrl String @default("")
  stars Int @default(0)
  likes Int @default(0)
  chunk Chunk @relation(fields: [chunkId], references: [id])
  chunkId String @db.ObjectId
  url String @default("")
  replies Reply[]
  iat DateTime @default(now())
}


model Reply{
  id String @id @db.ObjectId @default(auto()) @map("_id")
  username String
  content String
  review Review @relation(fields: [reviewId], references: [id])
  reviewId String @db.ObjectId
  iat DateTime @default(now())
}

model User{
  id String @id @db.ObjectId @default(auto()) @map("_id")
  fullName String @default("")
  email String
  password String
  isVerified Boolean @default(false)
  chunks Chunk[]
  iat DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Chunk{
  id String @id @db.ObjectId @default(auto()) @map("_id")
  name String
  replyEnabled Boolean @default(false)
  starsEnabled Boolean @default(false)
  imageEnabled Boolean @default(false)
  videoEnabled Boolean @default(false)
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  url String @default("")
  reviews Review[]
  iat DateTime @default(now())
  updatedAt DateTime @default(now())
}
